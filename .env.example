# HelloKittyCMS Docker Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ======================
# Database Configuration
# ======================
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=hellokittycms
MYSQL_USER=hellokitty
MYSQL_PASSWORD=change_me_db_password

# ======================
# Application Secrets
# ======================
# Generate a strong random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_me_generate_random_key

# Salt for activation tokens (can be any string)
ACTIVATION_SALT=email-activation

# Pepper for password hashing (once set, do not change or users won't be able to login)
PEPPER=change_me_pepper_value

# ======================
# Email Configuration (MailerSend) - OPTIONAL
# ======================
# If not configured, activation and password reset links will be printed to the backend console
MAILERSEND_API_KEY=
MAILERSEND_FROM_EMAIL=noreply@yourdomain.com

# ======================
# reCAPTCHA Configuration
# ======================
# Get keys from: https://www.google.com/recaptcha/admin
# These are Google's test keys (always pass) - replace with real keys in production
RECAPTCHA_PUBLIC_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI
RECAPTCHA_PRIVATE_KEY=6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe

# ======================
# Default Admin Account
# ======================
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!

# ======================
# Application Settings
# ======================
# URL where frontend is hosted (used for email links)
TEMPLATE_BASE_URL=http://localhost

# Set to True for development, False for production
FLASK_DEBUG=False

# Cookie security (set to True if using HTTPS)
SESSION_COOKIE_SECURE=False
